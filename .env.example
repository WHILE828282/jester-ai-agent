# ---------- OpenAI ----------
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-4o-mini

# ---------- X (Twitter) OAuth 1.0a (Recommended for posting) ----------
X_APP_KEY=
X_APP_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# ---------- X API Optional config ----------
X_POST_LANGUAGE=en
X_REPLY_LANGUAGE=en

# ---------- Bot identity ----------
BOT_NAME=JESTER_AI
BOT_PERSONA="Rude swamp frog that turns market chaos into filthy jokes"
